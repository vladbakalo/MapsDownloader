<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageViewRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_map"
        android:tint="@color/colorIconInCell"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="@dimen/icon_left_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="@dimen/list_top_bottom_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/icon_left_padding"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/list_top_bottom_padding" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRegionName"
        android:text="Region"
        android:textColor="@color/colorTextInCell"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/list_top_bottom_padding"
        android:layout_marginLeft="@dimen/list_item_left_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/list_top_bottom_padding" />
    <ProgressBar
        android:layout_width="0dp"
        android:layout_height="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressRegionDownload"
        app:layout_constraintRight_toLeftOf="@+id/imageDownload"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textRegionName"
        android:visibility="gone"
        android:progress="10"
        android:max="40"
        android:progressDrawable="@drawable/intermediate_shape"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textRegionName" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDownload"
        android:src="@drawable/ic_action_import"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/list_top_bottom_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/list_top_bottom_padding"
        android:layout_marginRight="@dimen/list_right_padding"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
